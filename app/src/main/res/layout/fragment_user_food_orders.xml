<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.user.UserFoodOrdersFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/lin_orders"
        android:orientation="horizontal"
        android:weightSum="2">

        <Spinner
            android:id="@+id/user_foodOrders_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            style="@style/GraySpinnerTheme"
            android:layout_weight="1">

        </Spinner>

        <EditText
            android:id="@+id/user_foodOrders_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="@string/search"
            android:paddingRight="5dp"
            android:drawableEnd="@drawable/ic_search"
            android:drawableRight="@drawable/ic_search"
            android:background="@drawable/gray_rectangle"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:id="@+id/user_foodOrders_rv">

    </android.support.v7.widget.RecyclerView>

</FrameLayout>